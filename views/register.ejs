<!-- include header -->
<%- include('include/_header')%>
<!-- include header -->
<div class="register">
    <div class="container">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://coronavirus.utah.gov/wp-content/uploads/vaccine_.png?x58403" alt="" style="height:150px;width:150px"/>
                <h3>Welcome</h3>
                <p>You are 30 seconds away from earning your own money!</p>
                <a href="/"> <button class="btn" >Homepage</button></a>
            </div>
            <div class="col-md-9 register-right">
                <div class="register-btn-div mt-3">
                    <a class="btn btn-p"  href="./login">Login</a>
                </div>
                <div class="container">
                    <h3 class="register-heading">User Registration Form</h3>
                    <form action="/api/users" method="POST">
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="First Name *" value="" name="firstName" required/>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Your Email *" value="" name="email" required/>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password *" value="" name="password" required/>
                                </div>
                                
                                <div class="form-group">
                                    <div class="maxl">
                                        <label class="radio inline"> 
                                            <input type="radio" name="gender" value="male" checked  required>
                                            <span> Male </span> 
                                        </label>
                                        <label class="radio inline"> 
                                            <input type="radio" name="gender" value="female" required>
                                                <span>Female </span> 
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Last Name *" value="" name="lastName" required/>
                                </div>
                                <div class="form-group">
                                    <input type="text"  name="phone" class="form-control" placeholder="Your Phone *" value="" required/>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Confirm Password *" value="" name="cpassword" required/>
                                </div>
                                <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Enter Your Age *" value="" name="age" required/>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mb-3">
                            <input type="submit" class="btn btn-p"  value="Register"/>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>
<!-- include footer -->
<%- include('include/_footer')%>
<!-- include footer -->