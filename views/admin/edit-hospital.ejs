<!-- include Admin header -->
<%- include('../include/_adminHeader')%>
<!-- include Admin header -->
<!-- Add Hospital Starts  -->
<div class="container mt-3">
    <h5 class="mb-4">Edit Hospital</h5>
    <!-- Add Hospital Form Start  -->
    <form method="POST" id="update_hospital">
        <div class="row">
            <div class="col-lg-10 col-md-10 col-12">
                <div class="form-group row">
                    <input type="hidden" name="id" value="<%= hospital._id %>">
                    <label class="col-sm-3 col-form-label">Hospital ID</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="hspId" placeholder="Hospital ID" value="<%= hospital_id %>" required readonly>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Hospital Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="name" placeholder="Hospital Name" value="<%= hospital.name %>" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Hospital Email</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="email" placeholder="Hospital Email" value="<%= hospital.email %>" required readonly>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Details</label>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <select class="form-control" name="state" required>
                                            <option value="">State</option>
                                            <option value="maharashtra" >Maharashtra</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <select class="form-control" name="district" required>
                                            <option value="">District</option>
                                            <option value="mumbai">Mumbai</option>
                                            <option value="thane">Thane</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="row">
                                    <div class="col-sm-12 ">
                                        <input type="number" class="form-control" name="pincode" value="<%= hospital.pincode %>" placeholder="Pincode" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Hospital Address</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" name="address" rows="3" placeholder="Hospital Address"  required><%= hospital.address %></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="<%= hospital.password %>" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" name="cpassword" placeholder="Confrim Password" value="<%= hospital.cpassword %>" required>
                    </div>
                </div>
                <div class="text-center">
                    <button class="form-btn form-btn-p w-50 my-3" type="submit">Update</button>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- Add Hospital Ends  -->
<!-- include Admin Footer -->
<%- include('../include/_panelFooter')%>
<!-- include Admin Footer -->